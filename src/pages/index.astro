---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const pageTitle = "Bailey Cumbers Portfolio";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={pageTitle} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<header>
			<h1>{pageTitle}</h1>
			<nav>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/about/">About</a></li>
					<li><a href="/blog/">Blog</a></li>
				</ul>
			</nav>
		</header>

		<main style="padding: 20px;">
			<h2>Welcome to my Portfolio!</h2>
			<p>I'm Bailey Cumbers, a videographer, photographer, and podcast producer.  Explore my work below!</p>
			<ul>
				<li><a href="/about/">Learn more about me</a></li>
				<li><a href="/blog/">Check out my latest projects</a></li>
			</ul>
		</main>

		<footer>
			<p>&copy; {new Date().getFullYear()} Bailey Cumbers</p>
		</footer>
	</body>
</html>
